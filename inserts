CREATE TABLE tipo
( id INT(11) NOT NULL AUTO_INCREMENT,
  descripcion VARCHAR(30) NOT NULL,
  CONSTRAINT tipo_pk PRIMARY KEY (id)
);




CREATE TABLE prediccion( id INT(11) NOT NULL AUTO_INCREMENT,  tipo INT(11) NOT NULL,  prediccion VARCHAR(100) NOT NULL,   fecha DATETIME NOT NULL,  estado INT(11),  CONSTRAINT prediccion_pk PRIMARY KEY (id),  CONSTRAINT tipo_fk FOREIGN KEY (tipo) REFERENCES tipo(id));



